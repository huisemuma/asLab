import com.greensock.TweenMax; import com.greensock.easing.*; var i:int;var shapeMax:int = 50;var shapeArr:Array = [];var arrArr:Array = [];init();function init(){	addChild(new FPS())	for(i = 0; i<shapeMax; i++)	{		var foo:Shape = new Shape();		shapeArr.push(foo);		addChild(foo);		var arr:Array = randomArr();		arrArr.push(arr);	}		stage.addEventListener(MouseEvent.CLICK, changeMov);}function changeMov(e:MouseEvent){	trace("down")	for(i = 0; i<shapeMax; i++)	{		TweenMax.to(arrArr[i], 0.4, {endArray:randomArr(), onUpdate:Draw, delay:0.02 * i, onUpdateParams:[i]}); 	}}function Draw(_id:int){	var color:uint = arrArr[_id][7] << 16 | arrArr[_id][8] << 8 | arrArr[_id][9];	shapeArr[_id].graphics.clear();	shapeArr[_id].graphics.lineStyle(); 	shapeArr[_id].graphics.beginFill(color); 	shapeArr[_id].graphics.moveTo(arrArr[_id][0], arrArr[_id][1]); 	shapeArr[_id].graphics.lineTo(arrArr[_id][2], arrArr[_id][3]); 	shapeArr[_id].graphics.lineTo(arrArr[_id][4], arrArr[_id][5]); 	shapeArr[_id].graphics.lineTo(arrArr[_id][0], arrArr[_id][1]); 	shapeArr[_id].graphics.endFill();	shapeArr[_id].alpha = arrArr[_id][6]}function randomArr():Array{	var _arr:Array = [int(Math.random()*720) + 180, int(Math.random()*1280 + 360), 					  int(Math.random()*720) + 180, int(Math.random()*1280 + 360), 					  int(Math.random()*720) + 180, int(Math.random()*1280 + 360), 					  int(Math.random()*100) * 0.01,					  int(Math.random()*255), int(Math.random()*255), int(Math.random()*255)];	return _arr;}